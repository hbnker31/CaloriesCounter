<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#8bc34a"
    android:layout_height="match_parent"
    tools:context="com.example.hemant.caloriescounter.MainActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#ff3a382f"

        />
    <ImageView
        android:id="@+id/logo"
        android:layout_below="@+id/title_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/apple"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:gravity="center"
        android:background="@drawable/row_bg"
        >
        <EditText
            android:id="@+id/foodET"
            android:padding="14dp"
            android:layout_marginTop="18dp"
            android:hint="@string/hint_food"

            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/caloriesET"
            android:layout_width="250dp"
            android:hint="@string/hint_calories"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:inputType="number"/>
        <Button
            android:id="@+id/submitB"
            android:layout_marginTop="24dp"
            android:text="@string/submit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
